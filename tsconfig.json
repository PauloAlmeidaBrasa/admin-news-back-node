
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": "src",
    "outDir": "dist",

    "baseUrl": "src",
    "paths": {
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"],
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@repositories/*": ["repositories/*"],
      "@contracts/*": ["contracts/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    // "typeRoots": ["./src/contracts", "./node_modules/@types"]
  },
  "include": ["src"]
}